.navbar.navbar-position-top#nav_top
  .navbar-inner
    
    .container
      %nav.social-public-links.pull-left
        %ul
          %li
            %a{:href => "http://www.facebook.com/nastachku?ref=stream", :target => "_blank"}
              %i.ficon-facebook-rect
          %li
            %a{:href => "https://twitter.com/nastachku", :target => "_blank"}
              %i.ficon-twitter-bird
          %li
            %a{:href => "http://vk.com/nastachku", :target => "_blank"}
              %i.ficon-vkontakte-rect

      %ul.nav.pull-left
        %li= link_to t('.stachka_2012'), 'http://2012.nastachku.ru', class: 'btn-shine add_lecture prev_year', target: "_blank"
        %li= link_to t('.add_lecture'), new_account_event_path, class: 'btn-shine add_lecture'

      %ul.nav.pull-right
        - unless signed_in?
          = item :li, t(".login"), new_session_path
        - if signed_in?
          = item :li, current_user.decorate.full_name, edit_account_path
          %li= link_to '/', '#'
          %li= link_to t('.logout'), session_path, :method => :delete
          - if signed_as_admin?
            %li= link_to '/', '#'
            %li= link_to t(".admin"), admin_root_path